<style>
    .block{
        float: right;
    }
</style>

<div class="container mt-4">
  <h2>
    待完成订单
  </h2>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>用户</th>
      <th>商品名称</th>
      <th>商品数量</th>
      <th>总金额</th>
      <th>配送地址</th>
      <th>联系电话</th>
      <th>付款时间</th>
    </tr>
    </thead>
    <% unless @orders.nil? %>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.user_name %></td>
          <td><%= link_to order.product_name, product_path(id: order.product_id) %></td>
          <td><%= order.amount %></td>
          <td><%= order.total_money %></td>
          <td><%= order.address %></td>
          <td><%= order.user.telephone %></td>
          <td><%= order.pay_time %></td>
        </tr>
      <% end %>
      </tbody>
      <% end %>
  </table>

</div>