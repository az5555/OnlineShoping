<div class="row mt-5">
  <div class="col-md-6 offset-md-3">
    <% if @comment.errors.any?%>
      <div class="alert alert-danger">
        <h2>存在<%= pluralize(@comment.errors.count, "error") %>个错误(仅显示部分) :</h2>
        <ul>
          <% @comment.errors.first(5).each do |error| %>
            <li><%= error.full_message %></li>
          <% end -%>
        </ul>
      </div>
    <% end -%>
    <h1>修改评论</h1>
    <%= form_for :comment, url: comment_path(@comment), method: :put, html: {
      class: 'form-horizontal', id: "user_form"
    } do |f| %>

      <div class="mb-3">
        <%= f.label :评论 %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>


      <div class="text-center">
        <%= f.submit '修改', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>